<div class="wrapper">
    <div>
      <%= image_tag "logo_eatsplit.svg",class: "logo center" %>
    </div>
    <div class="container">
      <div class="top_search">
        <div class="top_search_input">
          <%= form_tag root_path, method: :get do %>
            <%= text_field_tag :query, params[:query], placeholder: "Search", id: "searchInput", value: "" %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <% @restaurants.each do |resto| %>
          <% image = cl_image_tag resto.photo %>
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path resto.photo %>');">
              <div class="card-category">Nearby</div>
              <div class="card-description">
                <h2><%= resto.name %></h2>
                <p><%= resto.address %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <script>
    search = document.getElementById('search_form');

    window.addEventListener('load', function () {
      search.value = "";
    })
  </script>


